@page "/confirmacao/{id}/{titulo}/{menssagem}"

<MudCard Outlined="true">
    <MudCardContent>
        <MudText Typo="Typo.h6" Class="mb-0">Notificação: @id</MudText>
        <MudDivider Class="my-3"/>
        <MudGrid Spacing="1">
            <MudItem xs=12 sm=12 md=2 lg=2 xl=2 xxl=2 Class="py-0">
                <MudText Typo="Typo.overline" Style="font-weight: bold; padding: 0px;">Título: </MudText>
            </MudItem>
            <MudItem xs=12 sm=12 md=10 lg=10 xl=10 xxl=10 Class="py-0">
                <MudText Typo="Typo.overline" Style="padding: 0px;">@titulo</MudText>
            </MudItem>
            <MudItem xs=12 sm=12 md=2 lg=2 xl=2 xxl=2 Class="py-0">
                <MudText Typo="Typo.overline" Style="font-weight: bold; padding: 0px;">Mensagem: </MudText>
            </MudItem>
            <MudItem xs=12 sm=12 md=10 lg=10 xl=10 xxl=10 Class="py-0">
                <MudText Typo="Typo.overline" Style="padding: 0px;">@menssagem</MudText>
            </MudItem>
        </MudGrid>

    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public string id { get; set; }

    [Parameter]
    public string titulo { get; set; }

    [Parameter]
    public string menssagem { get; set; }
}
